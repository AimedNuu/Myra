<Project>
  <ExportOptions Namespace="Myra.Samples.FantasyMapGenerator.UI" Class="MainForm" OutputPath="D:\Projects\Hebron\Myra\Source\Samples\Myra.Samples.FantasyMapGenerator\UI" />
  <HorizontalSplitPane Id="_splitPane">
    <Grid RowSpacing="8">
      <ColumnsProportions>
        <Proportion Type="Fill" />
      </ColumnsProportions>
      <RowsProportions>
        <Proportion />
        <Proportion />
        <Proportion />
        <Proportion />
        <Proportion />
        <Proportion />
        <Proportion />
        <Proportion />
        <Proportion />
      </RowsProportions>
      <Grid ColumnSpacing="8" RowSpacing="8">
        <ColumnsProportions>
          <Proportion Type="Pixels" Value="140" />
          <Proportion Type="Fill" />
        </ColumnsProportions>
        <RowsProportions>
          <Proportion />
          <Proportion />
          <Proportion />
        </RowsProportions>
        <TextBlock Text="Size:" Id="" />
        <ComboBox SelectedIndex="2" Id="_comboSize" HorizontalAlignment="Stretch" GridPositionX="1">
          <ListItem Text="512x512" />
          <ListItem Text="1024x1024" />
          <ListItem Text="2048x2048" />
          <ListItem Text="4096x4096" />
        </ComboBox>
        <TextBlock Text="Variability:" GridPositionY="1" />
        <SpinButton Value="1" HorizontalAlignment="Stretch" Id="_spinVariability" GridPositionX="1" GridPositionY="1" />
        <TextBlock Text="Water/Land(60%):" Id="_textWaterLand" GridPositionY="2" />
        <HorizontalSlider Minimum="0" Maximum="100" Id="_sliderWaterLand" GridPositionX="1" GridPositionY="2" />
      </Grid>
      <CheckBox Text="Surrounded By Water" ImageWidthHint="10" ImageHeightHint="10" ContentHorizontalAlignment="Stretch" ContentVerticalAlignment="Stretch" Id="_checkSurrondedByWater" GridPositionY="1" />
      <CheckBox Text="Smooth" ImageWidthHint="10" ImageHeightHint="10" ContentHorizontalAlignment="Stretch" ContentVerticalAlignment="Stretch" Id="_checkSmooth" GridPositionY="2" />
      <CheckBox Text="Remove Small Islands" ImageWidthHint="10" ImageHeightHint="10" ContentHorizontalAlignment="Stretch" ContentVerticalAlignment="Stretch" Id="_checkRemoveSmalIslands" GridPositionY="3" />
      <CheckBox Text="Remove Small Lakes" ImageWidthHint="10" ImageHeightHint="10" ContentHorizontalAlignment="Stretch" ContentVerticalAlignment="Stretch" Id="_checkRemoveSmallLakes" GridPositionY="4" />
      <TextButton Text="Generate" Id="_buttonGenerate" HorizontalAlignment="Stretch" GridPositionY="5" />
      <Grid ColumnSpacing="8" GridPositionY="6">
        <ColumnsProportions>
          <Proportion />
          <Proportion Type="Fill" />
        </ColumnsProportions>
        <RowsProportions>
          <Proportion />
        </RowsProportions>
        <TextBlock Text="View Mode:" />
        <ComboBox SelectedIndex="0" Id="_comboViewMode" HorizontalAlignment="Stretch" GridPositionX="1">
          <ListItem Text="Normal" />
          <ListItem Text="Siluette" />
        </ComboBox>
      </Grid>
      <TextButton Text="Save As PNG..." Id="_buttonSaveAsPng" HorizontalAlignment="Stretch" GridPositionY="7" />
    </Grid>
    <Panel GridPositionX="2">
      <Image Id="_imageGenerated" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
      <TextBlock Text="Generating..." Id="_textGenerating" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Panel>
  </HorizontalSplitPane>
</Project>